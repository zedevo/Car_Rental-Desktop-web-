@model CarRental.Data.Models.Car
@{
    ViewData["Title"] = Model.Make + " " + Model.Model;
}

<div class="container py-5 fade-in-up">
    <div class="row align-items-center">
        <!-- Car Image -->
        <div class="col-lg-7 mb-4 mb-lg-0">
            <div class="glass-card p-2">
                <img src="@Model.ImageUrl" class="img-fluid rounded-4 w-100" alt="@Model.Make @Model.Model" style="object-fit: cover; height: 500px;">
            </div>
        </div>

        <!-- Car Details -->
        <div class="col-lg-5">
            <div class="glass-card p-5 h-100">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <span class="badge bg-primary bg-opacity-25 text-primary mb-2">@Model.Category</span>
                        <h1 class="display-5 fw-bold mb-0">@Model.Make @Model.Model</h1>
                        <p class="text-secondary fs-5">@Model.Year Model</p>
                    </div>
                </div>

                <div class="mb-5">
                    <h2 class="text-gradient fw-bold mb-3">$@Model.DailyRate <span class="fs-5 text-secondary fw-normal">/ day</span></h2>
                    <p class="text-secondary">
                        Experience the ultimate driving pleasure with our premium @Model.Make @Model.Model. 
                        Perfect for both business and leisure, offering top-tier comfort and performance.
                    </p>
                </div>

                <div class="row g-3 mb-5">
                    <div class="col-6">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-primary bg-opacity-10 p-2 rounded-3">
                                <i class="bi bi-speedometer2 text-primary fs-4"></i>
                            </div>
                            <div>
                                <small class="text-secondary d-block">0-100 km/h</small>
                                <span class="fw-bold">
                                    @(Model.Category == "Bus" ? "N/A" : "3.5s")
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-info bg-opacity-10 p-2 rounded-3">
                                <i class="bi bi-gear-wide-connected text-info fs-4"></i>
                            </div>
                            <div>
                                <small class="text-secondary d-block">Transmission</small>
                                <span class="fw-bold">Automatic</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-success bg-opacity-10 p-2 rounded-3">
                                <i class="bi bi-fuel-pump text-success fs-4"></i>
                            </div>
                            <div>
                                <small class="text-secondary d-block">Fuel Type</small>
                                <span class="fw-bold">
                                    @(Model.Category == "Electric" ? "Electric" : "Premium")
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-secondary bg-opacity-10 p-2 rounded-3">
                                <i class="bi bi-people text-white fs-4"></i>
                            </div>
                            <div>
                                <small class="text-secondary d-block">Seats</small>
                                <span class="fw-bold">
                                    @(Model.Category == "Bus" ? "50" : "4")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-3">
                    <a asp-controller="Booking" asp-action="Index" class="btn btn-premium btn-lg py-3">Book Now</a>
                    <a asp-action="Index" class="btn btn-outline-light py-3">Back to Fleet</a>
                </div>
            </div>
        </div>
    </div>
</div>
